{{!-- <div id="header" class="header-wrap{{#is "home"}} header-wrap-home{{#if @site.cover_image}} has-image" style="background-image: url({{img_url @site.cover_image}});{{/if}} {{/is}}"> --}}
<div id="header" class="header-wrap{{#is "home"}} header-wrap-home has-image lazy" data-url="https://img.halfrost.com/Blog/ArticleTitleImage/quantum_4.png"{{/is}}">
    <header class="site-header d-flex">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="logo">
                {{#if @site.logo}}
                    <a href="{{@site.url}}" class="logo-image" id="logo"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
                    <a href="{{@site.url}}" class="logo-image" id="logo-alternete"><img src="{{asset "images/logo-alternate.svg"}}" alt="{{@site.title}}"></a>
                {{else}}
                    <a href="{{@site.url}}" class="logo-text">{{@site.title}}</a>
                {{/if}}
            </div>
            <nav class="nav-wrap d-none d-lg-block" {{#is "home"}} style="--text-title: #ffffff" {{/is}}>
                <ul class="nav-list">
                    {{navigation}}
                </ul>
            </nav>
            <div class="nav-right" {{#is "home"}} style="--text-title: #ffffff" {{/is}}>
                <a  href="#" class="search-icon js-search-button" aria-label="Search" tabindex="0">{{> icons/search}}</a>
                <div class="menu-icon d-lg-none js-menu-open">
                    <span class="line"></span>
                    <span class="line"></span>
                    <span class="line"></span>
                </div>
            </div>
            <nav class="mobile-menu nav-wrap d-lg-none" id="mobile-menu">
                <ul class="nav-list">{{navigation}}</ul>
            </nav>
            <div class="backdrop d-lg-none js-backdrop" id="backdrop">
            </div>
        </div>
    </header>
    {{#is "home"}}
    {{> hero-section}}
    {{/is}}
</div>